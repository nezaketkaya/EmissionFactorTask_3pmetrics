@model EmissionFactorTask_3pmetrics.Models.EmissionSources

<h1>Emission Sources</h1>

<h4>Add Emission Source</h4>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddES">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="sourceName" class="control-label">Source Name:</label>
                <input type="text" asp-for="sourceName" class="form-control" />
                <span asp-validation-for="sourceName" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Add</button>
        </form>
    </div>
</div>


<h2>Points</h2>
<input type="text" id="searchInput" placeholder="Search for source">
<table class="table">
    <thead>
        <tr>
            <th>Source Name</th>
            <th>Creation Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.ESources)
        {
            <tr>
                <td>@item.sourceName</td>
                <td>@item.creationDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>
                    <form method="post" asp-action="Delete" asp-controller="EmissionSource">
                        <input type="hidden" name="Id" value="@item.id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

